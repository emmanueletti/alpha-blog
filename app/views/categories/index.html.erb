<h1 class="text-center" >Listing All Categories</h1>
<div class="apple_pagination">
  <%= will_paginate(@categories, :container => false) %>
</div>
<% @categories.each do |category| %>
  <div class="card text-center m-4 shadow mb-5 bg-body rounded">
    <div class="card-body">
      <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success" %></h5>
      <div class="d-flex justify-content-between w-25 mx-auto">
        <%= link_to 'View', category_path(category.id), class: "btn btn-outline-primary" %>
        <%= link_to 'Edit', edit_category_path(category.id), class: "btn btn-outline-info" %>
        <%= button_to 'Delete', category_path(category.id), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
      </div>
      <div class="card-text"><%= pluralize(category.articles.count, "Article") %> </div>
    </div>
    <div class="card-footer text-muted">
      <small>Created <%= time_ago_in_words(category.created_at) %>, edited <%= time_ago_in_words(category.updated_at) %></small>
    </div>
  </div>
<% end %>
<p><%= link_to 'Create New Category', new_category_path %></p>
<div class="apple_pagination">
  <%= will_paginate(@categories, :container => false) %>
</div>
