<h1 class="text-center">Login</h1>
<%# Research difference between scope and model %>
<%# https://medium.com/@tinchorb/form-with-building-html-forms-in-rails-5-1-f30bd60ef52d %>
<%= form_with scope: :session, url: login_path, remote: false do |field| %>
  <div class="mb-3">
    <%= field.label :email, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= field.email_field :email, class:"form-control", placeholder: "Enter your email address" %>
    </div>
  </div>
  <div class="mb-3">
    <%= field.label :password, class: "col-sm-2 col-form-label" %>
    <div class="col-10">
      <%= field.password_field :password, class:"form-control", placeholder: "Enter your password" %>
    </div>
  </div>
  <div class="mb-3">
    <div class="col-sm-10">
      <%= field.submit "Login", class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
