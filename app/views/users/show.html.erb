<div class="container-md">
  <%# Display user info %>
  <h2 class="text-center"><%= @user.username %>'s profile </h2>
  <%# using a helper method in a view %>
  <%# create view helper methods in helpers/application_helper.rb %>
  <%= gravatar_for(@user, options: {size: 200, class_string: "rounded shadow mx-auto d-block"}) %>
  <%# Loop through each article and display a card %>
  <% if @user.articles.any? %>
    <h3 class="text-center mt-4">Articles </h3>
    <% for article in @user.articles %>
      <%= render 'shared/card', article_data: article %>
    <% end %>
  <% end %>
</div>
